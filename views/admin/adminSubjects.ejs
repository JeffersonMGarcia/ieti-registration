<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subjects</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />  
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link rel="icon" href="/images/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/adminSubjects.css">
    <link href="/css/select2.min.css" rel="stylesheet" />
    <script src="/js/select2.min.js"></script>
</head>
<body>
    <%- include('../sidebar') %>
    <div class="main-container">
        <div class="content--wrapper">
            <div class="header--title">
                <h2>Subjects</h2>
            </div>
        </div>

        <div class="main-wrapper">
            <div class="input-container">
                <div class="input-child">
                    <div class="children">
                        <input type="text" id="code" placeholder="Code">
                        <input type="text" id="subjects" placeholder="Subjects">
                        <input type="text" id="unit" placeholder="Units">
                        
                    </div>
                    <div class="children">
                        <select name="" id="year">
                            <option disabled selected>Select Year</option>
                            <option value="1st Year">1st Year</option>
                            <option value="2nd Year">2nd Year</option>
                            <option value="3rd Year">3rd Year</option>
                            <option value="4th Year">4th Year</option>
                        </select>
                        <select class="js-example-placeholder-multiple js-states form-control" id="courses" multiple="multiple">
                            <option value="BSIT">BSIT</option>
                            <option value="BSCpE">BSCpE</option>
                            <option value="BEED">BEED</option>
                            <option value="BSBA">BSBA</option>
                            <option value="BSHRM">BSHRM</option>
                            <option value="BSCA">BSCA</option>
                            <option value="BSED_ENG">BSED ENG</option>
                            <option value="BSED_MATH">BSED MATH</option>
                        </select>
                        <select name="" id="semester">
                            <option disabled selected>Select Semester</option>
                            <option value="1st sem">1st Sem</option>
                            <option value="2nd sem">2nd Sem</option>
                        </select>
                        <div class="for-button">
                            <button class="btn" id="add-btn"><i class="fa-solid fa-circle-plus"></i></button>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>

        <div class="tabular--wrapper">
            <div class="table-container">
                <table class="list">
                    <thead class="tablehead">
                       <tr>
                            <th>Code</th>
                            <th>Subjects</th>
                            <th>Units</th>
                            <th>Action</th>
                       </tr>
                    </thead>
                    <tbody class="tblbody">
                        <% subjects.forEach((subj) => { %>
                        
                            <tr>
                                <td><%= subj.code %></td>
                                <td><%= subj.subject_name %></td>
                                <td><%= subj.units %></td>
                                <td class="actions"><button class="btnedit"><i class="fa-solid fa-pen-to-square"></i></button><button class="btndel" id="<%= subj.code %>"><i class="fa-solid fa-trash"></i></button></td>
                            </tr>

                        <% }) %>
                    </tbody>
                    <tfoot class="tblfoot">
                        <tr>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

    </div>
    <script type="text/javascript" src="/js/adminSubjects.js"></script>
</body>
</html>
