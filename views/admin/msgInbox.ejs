<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link rel="icon" href="/images/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/msgInbox.css">
    <link href=" https://cdn.jsdelivr.net/npm/sweetalert2@11.7.27/dist/sweetalert2.min.css " rel="stylesheet">
    <title>Inbox</title>
</head>
<body>
    <%- include('../sidebar') %>
    <div class="main--content">
        <div class="header--wrapper">
            <div class="header--title">
                <h2>Inbox</h2>
            </div>
        </div>
        <div class="content--wrapper">
            <div id="inbox-container">
                <div class="email" data-email-id="1" onclick="showEmailContent(1)">
                    <div class="info">
                        <div class="sender">John Doe</div>
                        <div class="subject">Meeting Tomorrow</div>
                        <div class="timestamp">2 hours ago</div>
                    </div>
                    <button class="delete-button" onclick="deleteEmail(1)">Delete</button>
                </div>
                <div class="email" data-email-id="2" onclick="showEmailContent(2)">
                    <div class="info">
                        <div class="sender">Jane Smith</div>
                        <div class="subject">Project Update</div>
                        <div class="timestamp">1 day ago</div>
                    </div>
                    <button class="delete-button" onclick="deleteEmail(2)">Delete</button>
                </div>
                <!-- Add more emails as needed -->
            
                <div id="email-content">
                    <h2 id="email-subject"></h2>
                    <p id="email-body"></p>
                </div>
            </div>
        </div>
    </div>
    <script>
        function showEmailContent(emailId) {
            // Dummy data for email content
            const emailData = {
                1: { subject: "Meeting Tomorrow", body: "Hi, We have a meeting scheduled for tomorrow at 10 AM. Please be on time." },
                2: { subject: "Project Update", body: "Hello team, Just wanted to give you a quick update on the project. Everything is going smoothly." },
                // Add more email data as needed
            };
    
            const email = emailData[emailId];
    
            // Display email content
            document.getElementById("email-subject").innerText = email.subject;
            document.getElementById("email-body").innerText = email.body;
    
            // Show the email content div
            document.getElementById("email-content").style.display = "block";
        }
    
        function deleteEmail(emailId) {
            // You can add your delete logic here
            // For now, let's just remove the entire email container and clear the email content
            const emailElement = document.querySelector(`.email[data-email-id="${emailId}"]`);
            emailElement.remove();
            
            // Clear the email content
            document.getElementById("email-subject").innerText = "";
            document.getElementById("email-body").innerText = "";
            
            // Hide the email content when an email is deleted
            document.getElementById("email-content").style.display = "none";
        }
    </script>
</body>
</html>