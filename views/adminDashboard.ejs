<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link rel="icon" href="/images/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/dashboard.css">
    <link href=" https://cdn.jsdelivr.net/npm/sweetalert2@11.7.27/dist/sweetalert2.min.css " rel="stylesheet">
</head>
<body>
    <%- include("sidebar.ejs") %>

    <div class="main--content">
        <div class="header--wrapper">
            <div class="header--title">
                <span>Primary</span>
                <h2>Dashboard</h2>
            </div>
            <div class="user--info">
                <div class="search--box">
                  <i class="fa-solid fa-magnifying-glass"></i>
                  <input type="text" placeholder="Search" id="myInput" onkeyup="myFunction()">
                </div>
                <!-- <img src="/images/luffy.png" alt="" > -->
            </div>
        </div>

        <div class="card-container">
            <h3 class="main--title">Population</h3>
            <div class="card--wrapper">
                <div class="enrolled--card light-green">
                    <div class="card--header">
                        <div class="enrolled">
                            <span class="title">
                                Enrolled Students
                            </span>
                            <span class="enrolled--student"><%= enrolled %></span>
                        </div>
                        <i class="fa-solid fa-user-check icon"></i>
                    </div>
                    <span class="card--details">number of enrolled students</span>
                </div>

                <div class="enrolled--card light-red">
                    <div class="card--header">
                        <div class="enrolled">
                            <span class="title">
                                Unenrolled Students
                            </span>
                            <span class="enrolled--student"><%= unenrolled %></span>
                        </div>
                        <i class="fa-solid fa-user-xmark icon dark-red"></i>
                    </div>
                    <span class="card--details">number of unenrolled students</span>
                </div>

                <div class="enrolled--card light-purple">
                    <div class="card--header">
                        <div class="enrolled">
                            <span class="title">
                                Registered Accounts
                            </span>
                            <span class="enrolled--student" id="account-label"><%= numberofAccounts %></span>
                        </div>
                        <i class="fa-solid fa-users icon dark-purple"></i>
                    </div>
                    <span class="card--details">number of registered students</span>
                </div>

                <div class="enrolled--card light-blue">
                    <div class="card--header">
                        <div class="enrolled">
                            <span class="title">
                                Request
                            </span>
                            <span class="enrolled--student" id="request-label"><%= numberOfRequests %></span>
                        </div>
                        <i class="fa-solid fa-user-plus icon dark-blue"></i>
                    </div>
                    <span class="card--details">number of request</span>
                </div>
            </div>
        </div>

        <div class="tabular--wrapper">
            <h3 class="main--title">Request</h3>
            <div class="table-container">
                <table class="list" id="studentInfo">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Fullname</th>
                            <!-- <th>Course</th> -->
                            <th>Email</th>
                            <th>Number</th>
                            <!-- <th>Address</th>
                            <th>Gender</th> -->
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="hehe">
                        <% if(requests.length >= 1) { %>
                        <% requests.forEach((request) => { %>
                            <tr>
                                <td><%= request.date %></td>
                                <td><%= request.fullname %></td>
                                
                                <td><%= request.email %></td>
                                <td><%= request.contacts %></td>
                                
                                <td><button id="accept" data-id="<%= request.id %>">Accept</button>
                                    <button id="reject" data-id="<%= request.id %>">Reject</button>
                                </td>
                            </tr>
                        <% }) %>
                        <% }else{ %>
                        <tr>
                            <td colspan="8"><h3 style="text-align: center;">NO DATA TO DISPLAY</h3></td>
                        </tr>
                        <% } %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="8"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="/js/adminDashboard.js"></script>
</body>
</html>