<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }
        .content{
           
            margin: 2rem auto;
            width: 90vw;
            
        }

        .container {
           
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        h2 {
            text-align: center;
        }
        .form{
            padding-right: 1rem;
        }

        .form-group {
            margin-bottom: 20px;
        }
        .gender{
            display: flex;
            justify-content: space-around;
        }

        label {
            display: block;
            font-weight: bold;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="date"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        select {
            height: 40px;
        }

        input[type="radio"] {
            margin-right: 5px;
        }

        .form-group:last-child {
            margin-bottom: 0;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <%- include('navbar') %>
    <div class="content">
    <div class="container">
        <h2>Registration Form</h2>
        <form action="#" method="post" class="form" onsubmit="event.preventDefault();onFormSubmit()" id="registration-form">
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" required>
            </div>
            <div class="form-group">
                <label for="fullname">Full Name:</label>
                <input type="text" id="fullname" name="fullname" required>
            </div>
            <!-- <div class="form-group">
                <label for="course">Course:</label>
                <input type="text" id="course" name="course" required>
            </div> -->
            <div class="form-group">
                <label class = "course" for = "course">Course</label>
                          <select id="course" required>
                            <option value="please select course!!!">Select Course</option>
                            <option value="bsit">BSIT</option>
                            <option value="bscpe">BSCpE</option>
                            <option value="beed">BEED</option>
                            <option value="bsba">BSBA</option>
                            <option value="bshrm">BSHRM</option>
                            <option value="bsca">BSCA</option>
                            <option value="bsed-eng">BSED ENG</option>
                            <option value="bsed-math">BSED MATH</option>
                          </select>
                        </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="contact">Contact Number:</label>
                <input type="tel" id="contact" name="contact" required>
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" required>
            </div>
            <div class="form-group gender">
                <label>Gender:</label>
                <input type="radio" id="male" name="gender" value="Male" required>
                <label for="male">Male</label>
                <input type="radio" id="female" name="gender" value="Female" required>
                <label for="female">Female</label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn">Submit</button>
            </div>
        </form>
    </div>
</div>
    <script src="script.js"></script>
</body>
</html>
