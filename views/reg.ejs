    <div class="content">
    <div class="container">
        <h2 id="h2">Registration Form</h2>
        <form action="#" method="post" class="form"  id="registration-form">
            <div class="form-group">
                <label for="fullname">Full Name:</label>
                <input type="text" id="fullname" name="fullname" >
            </div>
            <!-- <div class="form-group">
