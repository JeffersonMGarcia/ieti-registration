      <!-- Progress bar -->
      <div class="progressbar">
          <div class="progress" id="progress"></div>
          <div class="progress-step progress-step-active" data-title="student"></div>
          <div class="progress-step" data-title="personal Info"></div>
          <div class="progress-step" data-title="academic Record"></div>
          <div class="progress-step" data-title="verify "></div>
      </div>

      <!-- Form steps -->
      <div class="form-step form-step-active">
          <!-- Step 1 content here -->
          <div class="input-group">
              <label for="Name">Lastname</label>
              <input type="text" name="lastname" id="lastname" placeholder="Enter your LastName" required>
              
              </div>
              <div class="input-group">
              <label for="Name">Firstname</label>
              <input type="text" name="firstname" id="firstname" placeholder="Enter your Firstname" required>
              </div>
              <div class="input-group">
              <label for="Name">MI</label>
              <input type="text" name="middlename" id="middlename" placeholder="Middle Initial" required>
              </div>
       
          <div class="container">
          <div class="selectedCourse">
      <label class = "course" for = "course">Course</label>
                <select id="course" required>
                  <option value="please select course!!!">Select Course</option>
                  <option value="bsit">BSIT</option>
                  <option value="bscpe">BSCpE</option>
                  <option value="beed">BEED</option>
                  <option value="bsba">BSBA</option>
                  <option value="bshrm">BSHRM</option>
                  <option value="bsca">BSCA</option>
                  <option value="bsed-eng">BSED ENG</option>
                  <option value="bsed-math">BSED MATH</option>
                </select>
              </div>
              <div class="year">
                  <label class = "enrollee" for = "enrollee">Year</label>
                  <select id="year" required>
                  <option value="pleace select year!!">Select Year</option>
                    <option value="1st year">1st Year</option>
                    <option value="2nd year">2nd Year</option>
                    <option value="3rd year">3rd Year</option>
                    <option value="4th year">4th Year</option>
                  </select>
                </div>
              <div class="container2">
              <div class="position">
              <label class = "enrollee" for = "enrollee">Student</label>
              <select id="student" required>
                <option value="New">New Student</option>
                <option value="re-enrollee">Re-enrollee</option>
                <option value="cross-enrollee">Cross enrollee</option>
                
              </select>
            </div>
            <div class="semester">
              <label class = "sem" for = "semester">Semester</label>
              <select id="semester" required>
                <option value="1stsem">1st sem</option>
                <option value="2ndsem">2nd sem</option>
              </select>
            </div>
            <div class="gender">
              <label class = "gender" for = "gender">Sex</label>
              <select id="gender" required>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select>
            </div>
          </div>
        </div>
               <div class="">
                <button class="btn btn-next width-50 ml-auto" class="submit"  id="submit" type="submit">Next</button>
                  <!--<a href="#" class="btn btn-next width-50 ml-auto"  id="" type="submit">Next</a>-->
               </div>
            
      </div>

      <div class="form-step">
          <!-- Step 2 content here -->
          <div class="container5">
              <div class="input-group">
                  <label class="date">date of birth</label>
                  <input type="date" class="date" id="date" required>
                  </div>

                  <div class="input-group">
                    <label for="telephone">place of birth</label>
                    <input type="text" name="birthplace" id="birthplace" placeholder="Place of Birth" required>
                    </div>
                  </div>
                  <div class="container3">
                  <div class="input-group">
                  <label for="status">Status</label>
                  <input type="text" name="status" id="status" placeholder="Status" required>
                  </div>

                  <div class="input-group">
                  <label for="nationality">nationality</label>
                  <input type="text" name="status" id="nationality" placeholder="Enter your Nationality" required>
                  </div>

                  <div class="input-group">
                    <label for="religion">religion</label>
                    <input type="text" name="religion" id="religion" placeholder="Enter your Religion" required>
                    </div>
                </div>

                  <div class="container4">
                  <div class="input-group">
                  <label for="telephone">telephone no</label>
                  <input type="number" name="telephone" id="telephone" placeholder="Your Number" maxlength="11" required>
                  </div>

                  <div class="input-group">
                    <label for="email">email</label>
                    <input type="text" name="email" id="email" placeholder="Enter Your Email" required>
                    </div>
                  </div>
                   
                    <div class="container6">
                    <div class="input-group">
                        <label for="parent">parent or guardian</label>
                        <input type="text" name="parent" id="parent" placeholder="Parent or Guardian" required>
                      </div>

                      <div class="input-group">
                        <label for="occupation">occupation</label>
                        <input type="text" name="occupation" id="occupation" placeholder="Occupation" required>
                      </div>
                      </div>

                      <div class="input-group">
                        <label for="province">Provincial address</label>
                        <input type="text" name="province" id="province" placeholder="Brgy/Municipality/Province" required>
                      </div>


                    <div class="container7">
                      <div class="input-group">
                        <label for="address">current address</label>
                        <input type="text" name="address" id="address" placeholder="Brgy/Municipality/Province" required>
                      </div>

                      <div class="input-group">
                        <label for="telephone2">tel no. a</label>
                        <input type="text" name="telephone2" id="telephone2" placeholder="tel no of guardian" required>
                      </div>
                      </div>
                    
                    <div class="btns-group">
                      <a href="#" class="btn btn-previous"  id="">Previous</a>
                      <a href="#" class="btn btn-next"  id="">Next</a>
                   </div>
