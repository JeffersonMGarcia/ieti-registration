<body>
       <div class="ina">
            <div class="dashboard-container">
                    <div class="content--container" id="content--container">
                        <div class="header-title">
                            <div class="header--title">
                                <h1>Hey There,<span class="name-student"> <%= student.fullname %>!</span></h1>
                                <p>Have a good day Wishing you a wonderful day filled with happiness and success!</p>
                            </div>
                        <div class="user-cicle">
                            <button onclick="myFunction()"> 
                                <i class="fa-solid fa-circle-user"></i>
                            </button>
                        </div>
                        </div>
                    <div class="cardings-container">
                        <div class="cardings-wrapper">
                            <!-- <div class="card third-card">
                                <div class="images-container"><img src="/images/etoo.png" alt=""></div>
                                <div class="mess-container">
                                    <h1>Select Course</h1>
                                    <p>Register now to kickstart your educational journey during this enrollment season.</p>
                                    <button id="regCourse"><i class="fa-solid fa-circle-arrow-right dark-red"></i></button>
                                </div>
                            </div> -->

                            <div class="card fourth-card">
                                <div class="images-container"><img src="/images/etoo.png" alt=""></div>
                                <div class="mess-container">
                                    <h1>Enroll Now</h1>
                                    <p>Register now to kickstart your educational journey during this enrollment season.</p>
                                    <button id="register"><i class="fa-solid fa-circle-arrow-right dark-green"></i></button>
                                </div>
                            </div>
                            
                            <div class="card light-purple">
                                <div class="images-container"><img src="/images/first.png" alt=""></div>
                                <div class="mess-container">
                                    <h1>Subjects Taken</h1>
                                    <p>Each semester, students must carefully consider the subjects they wish to take to meet their degree requirements and explore new areas of study</p>
                                    <button><i class="fa-solid fa-circle-arrow-right dark-purple"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                        <div class="profile-infoContainer largescreen" id="profile-infoContainer">
                            <div class="user-container" id="user-container">
                                <!-- <div class="user-button" id="user-button">
                                    <button onclick="trylng()"><i class="fa-solid fa-arrow-left"></i></button>
                                </div> -->
                                <div class="user--content">
                                <div class="user-image">
                                    <img src="/images/jef.png" alt="">
                                </div>
                                <div class="user-name">
                                    <h4 class="name"><%= student.fullname %></h4>
                                    <h5 class="course">BSIT</h5>
                                </div>
                            </div>
                            </div>

                            <div class="info-container">
                                
                                   <ul>
                                    <li><i class="fa-solid fa-envelope"></i><span><%= student.email %></span></li>
                                    <li><i class="fa-solid fa-phone"></i><span><%= student.phone %></span></li>
                                    <li><i class="fa-solid fa-venus-mars"></i><span>none</span></li>
                                    <li><i class="fa-solid fa-location-dot"></i><span>none</span></li>
                                   </ul>

                            </div>
                            <div class="logout-container">
                                <button id="logout">Logout</button>
                            </div>
                            
                        </div>

                        <div class="profile-infoContainer smallscreen" id="profile-infoContainer2">
                            <div class="user-container" id="user-container2">
                                <div class="user-button" id="user-button">
                                    <button onclick="trylng()"><i class="fa-solid fa-arrow-left"></i></button>
                                </div>
                                <div class="user--content">
                                <div class="user-image">
                                    <img src="/images/jef.png" alt="">
                                </div>
                                <div class="user-name">
                                    <h4 class="name">Jefferson M. Garcia</h4>
                                    <h5 class="course">BSIT</h5>
                                </div>
                            </div>
                            </div>

                            <div class="info-container">
                                
                                   <ul>
                                    <li><i class="fa-solid fa-envelope"></i><span>garciajeff2000@gmail.com</span></li>
                                    <li><i class="fa-solid fa-phone"></i><span>09385827299</span></li>
                                    <li><i class="fa-solid fa-venus-mars"></i><span>Male</span></li>
                                    <li><i class="fa-solid fa-location-dot"></i><span>Magsaysay San Pedro Laguna</span></li>
                                   </ul>

                            </div>
                            <div class="logout-container">
                                <button id="logout">Logout</button>
                            </div>
                            
                        </div>

                </div>
        </div> 
      
      <script type="text/javascript" src="/js/studDashboard.js"></script>
      <script>
            $(function(e) {
                $("#logout").click(function(e) {
                    $.ajax({
                        type: "POST",
                        url: "/logout",
                        success: (res) => {
                            if(res.operation){
                                location.reload(1)
                            }
                        }
                    })
                })
            })

          function myFunction() {
            document.getElementById('content--container').style.display = "none";
            document.getElementById('profile-infoContainer2').style.display = "flex";
            document.getElementById('user-container2').style.display = "flex";
            document.getElementById('profile-infoContainer2').style.width = "100%";
            document.getElementById('user-button').style.display = "flex";
          }

          function trylng(){
            document.getElementById('content--container').style.display = "flex";
            document.getElementById('profile-infoContainer2').style.display = "none";
            document.getElementById('user-container2').style.display = "none";
          }

      </script>
</body>
</html>